                    @header
                </div>
                <div class="w-full font-light">
                    @caption
                </div>
            </div>
            <div class="w-full flex flex-row justify-end items-center">
                @button
                <div class="w-4"></div>
            </div>
        </div>
    </div>
        <div class="h-4"></div></div>;
    }
}
